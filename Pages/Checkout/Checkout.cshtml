@page
@model Falz_Yummy_Pizza.Pages.Checkout.CheckoutModel
@{
}

<h1>Your Order</h1>
@{
    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle + ".Png");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp=append-version="true" />
        <p>Your Order For The @Model.PizzaName Pizza Is Ready!!!</p>
        <p>Toatal Price For Your Order Is: @Model.PizzaPrice</p>
        <br />
        <a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Corfirm Your Order</a>
    </div>
</div>
